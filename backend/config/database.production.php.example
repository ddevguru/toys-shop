<?php
/**
 * Production Database Configuration Example
 * Copy this to database.php and update with your cPanel credentials
 */

class Database {
    // cPanel Database Credentials
    // Format: cpanelusername_dbname, cpanelusername_dbuser
    private $host = 'localhost'; // Usually localhost on cPanel
    private $db_name = 'cpanelusername_toycart_db'; // Your database name from cPanel
    private $username = 'cpanelusername_toycart_user'; // Your database user from cPanel
    private $password = 'your_secure_database_password'; // Your database password
    private $conn;

    public function getConnection() {
        $this->conn = null;

        try {
            $this->conn = new PDO(
                "mysql:host=" . $this->host . ";dbname=" . $this->db_name . ";charset=utf8mb4",
                $this->username,
                $this->password,
                [
                    PDO::ATTR_ERRMODE => PDO::ERRMODE_EXCEPTION,
                    PDO::ATTR_DEFAULT_FETCH_MODE => PDO::FETCH_ASSOC,
                    PDO::ATTR_EMULATE_PREPARES => false
                ]
            );
        } catch(PDOException $e) {
            error_log("Connection Error: " . $e->getMessage());
            // In production, don't expose error details
            throw new Exception("Database connection failed");
        }

        return $this->conn;
    }
}

